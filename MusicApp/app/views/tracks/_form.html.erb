<!-- This form is for creating/editing track info  -->

<%= action = (track.persisted? ? track_url(track) : tracks_url) %>
<%= method = (track.persisted? ? :patch : :post) %>
<% submit_text = track.persisted? ? "Update" : "Create" %>

<center><form action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%= method  %>">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

<!-- Track title  -->
  <label for="track_name" style="color:teal">Track title:</label>
    <input type="text" id="track_title" name="track[title]" value="<%= track.title %>">
    <br>
<!-- Album name-->
<label style="color:teal">Album
<select name="track[album_id]">
    <% Album.all.each do |album| %>
    <option
      <%= "selected" if track.album_id == album.id %>
      value="<%= album.id %>">
      <%= album.name %>
      <% end %>
    </option>
  </select></label>
<br>
<!-- Track Type -->
<label for="track_type" style="color:teal">Track Type:</label>
Standard<input type="radio" id="track_type" name="track[track_type]" value="Standard"
  <%= track.track_type == "Standard" ? "checked" : "" %>>
Bonus<input type="radio" id="track_type" name="track[track_type]" value="Bonus"
  <%= track.track_type == "Bonus" ? "checked" : "" %>>
<br>
<!-- Lyrics  -->
<label for="lyrics" style="color:teal">Lyrics:<label>
  <br>
  <textarea name="track[lyrics]" cols="60" rows="10"><%= track.lyrics %></textarea>

<br>
<input type="submit" value="<%= submit_text %>"></form></center>
