<!-- This form is for creating/editing band info  -->

<%= action = (band.persisted? ? band_url(band) : bands_url) %>
<%= method = (band.persisted? ? :patch : :post) %>

<center><form action="<%= action %>" method="<%= method %>">
  <input type="hidden" name="_method" value="<%= method  %>">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="cat_name">Name of Band:</label>
    <input type="text" id="band_name" name="band[name]" value="<%= band.name %>">


<% submit_text = band.persisted? ? "Update" : "Create" %>
<input type="submit" value="<%= submit_text %>"></form></center>
